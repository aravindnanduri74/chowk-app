<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="morteza.packag.com.onlinestorekotlin">

    <uses-permission android:name="android.permission.INTERNET" />
<!--    //we are giving permission for our application to use internet-->

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".SignUpLayout" />
        <activity android:name=".HomeScreen" />
        <activity android:name=".FetchEProductsActivity" />
        <activity android:name=".CartProductsActivity" />
        <activity android:name=".FinalizeShoppingActivity" />
        <activity android:name=".ThankYouActivity"></activity>
    </application>

</manifest>